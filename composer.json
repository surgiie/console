{
    "name": "surgiie/console",
    "description": "A base command and set of useful traits/support classes for Laravel or Laravel Zero commands.",
    "type": "template",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergio Compean",
            "email": "scompean24@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Surgiie\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Surgiie\\Console\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest tests -c phpunit.xml.dist",
        "test-coverage": "export XDEBUG_MODE=coverage && vendor/bin/pest tests -c phpunit.xml.dist --coverage"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jals-es/surgiie-transformer.git"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "illuminate/console": "^10.0",
        "illuminate/validation": "^10.0",
        "nunomaduro/termwind": "^1.3",
        "surgiie/blade": "^2.0",
        "surgiie/transformer": "dev-master",
        "spatie/once": "^3.1",
        "vlucas/phpdotenv": "^5.5",
        "spatie/invade": "^1.1",
        "ramsey/uuid": "^4.5",
        "spatie/fork": "^1.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^1.21.3",
        "symfony/var-dumper": "^6.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
